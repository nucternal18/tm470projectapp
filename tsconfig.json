{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "target": "ESNext",
    "baseUrl": ".",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "moduleResolution": "node",
    "paths": {
      "@components/*": [
        "components/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@assets/*": [
        "assets/*"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@hooks/*": [
        "hooks/*"
      ],
      "@types": [
        "types"
      ],
      "@global-state/*": [
        "global-state/*"
      ],
      "@theme/*": [
        "theme/*"
      ],
      "@i18n/*": [
        "i18n/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@api/*": [
        "global-state/api/*"
      ],
      "@helpers/*": [
        "helpers/*"
      ],
      "@features/*": [
        "global-state/features/*"
      ],
      "@models/*": [
        "Models/*"
      ],
      "@lib/*": [
        "lib/*"
      ],
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "skipLibCheck": true,
    "module": "es6"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    "declaration.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
